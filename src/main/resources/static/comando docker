banco de dados:
docker run --name springbanco -p 5433:5433 -t -e POSTGRES_PASSWORD=admin -e POSTGRES_USER=postgres -e POSTGRES_DB=springboot -d postgres
entrar no container:
docker exec -it springbanco bash
psql -U postgres
psql -d springboot -U postgres -W

\l

\c springbboot

\q

sudo firewall-cmd --permanet --zone=public --add-port=5432/tcp
sudo firewall-cmd --reload

